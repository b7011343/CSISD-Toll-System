<!--Section: Contact v.2-->
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<section class="mb-4">

    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-center my-4">@Localizer["Contact us"]</h2>
    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5">
        @Localizer["Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within a matter of hours to help you"].
    </p>

    <div class="row">

        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-5">
            <form id="contact-form" name="contact-form" action="mail.php" method="POST">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="name" name="name" class="form-control">
                            <label for="name" class="">@Localizer["Your name"]</label>
                        </div>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="email" name="email" class="form-control">
                            <label for="email" class="">@Localizer["Your email"]</label>
                        </div>
                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <input type="text" id="subject" name="subject" class="form-control">
                            <label for="subject" class="">@Localizer["Subject"]</label>
                        </div>
                    </div>
                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12">

                        <div class="md-form">
                            <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea"></textarea>
                            <label for="message">@Localizer["Your message"]</label>
                        </div>

                    </div>
                </div>
                <!--Grid row-->

            </form>

            <div class="text-center text-md-left">
                <a class="btn btn-primary" onclick="">@Localizer["Send"]</a>
            </div>
            <div class="status"></div>
        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li>
                    <i class="fas"></i>
                    <p>@Localizer["Arundel St, Sheffield City Centre, Sheffield S1 2NU"]</p>
                </li>
                <li>
                    <i class="fas "></i>
                    <p>+ 01 234 567 89</p>
                </li>

                <li>
                    <i class="fas "></i>
                    <p>@Localizer["contact@NordicTransport.com"]</p>
                </li>
            </ul>
        </div>
        <!--Grid column-->

    </div>

</section>
<!--Section: Contact v.2-->