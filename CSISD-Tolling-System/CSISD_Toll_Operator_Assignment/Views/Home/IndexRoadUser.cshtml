@using CSISD_Toll_Operator_Assignment.Models
@model IndexViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <h7 class="mb-5 font-weight-bold">Customer ID: @Model.userId</h7>
    <table class="table table-hover table-bordered mt-2 table-sm">
        <thead>
            <tr>
                <th class="text-center" colspan="4">Toll History</th>
            </tr>
            <tr>
                <th scope="col">Entry</th>
                <th scope="col">Exit</th>
                <th scope="col">Charge</th>
                <th scope="col">Paid</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var invoice in Model.invoices)
                {
                    <tr>
                        <td>@invoice.EntryTimestamp</td>
                        <td>@invoice.ExitTimestamp</td>
                        <td>£@invoice.Fee</td>
                        <td>@(invoice.Paid ? "✔" : "❌") <button class="btn btn-sm btn-primary ml-5">Pay</button></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
