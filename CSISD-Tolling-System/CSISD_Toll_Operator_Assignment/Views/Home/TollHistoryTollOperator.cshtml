@{
    ViewData["Title"] = "TollHistory";
}
<div class="container">
    <table id="data-table" class="table table-hover table-bordered mt-2 table-sm">
        <thead>
            <tr>
                <th class="text-center" colspan="6">Toll History</th>
            </tr>
            <tr>
                <th scope="col">User ID</th>
                <th scope="col">Entry</th>
                <th scope="col">Exit</th>
                <th scope="col">Charge</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var invoice in Model.Invoices)
                {
                    <tr>
                        <td>@invoice.UserId</td>
                        <td>@invoice.EntryTimestamp</td>
                        <td>@invoice.ExitTimestamp</td>
                        <td>£@invoice.Fee</td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>