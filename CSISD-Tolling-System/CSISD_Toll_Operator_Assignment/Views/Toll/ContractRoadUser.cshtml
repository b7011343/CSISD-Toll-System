@using CSISD_Toll_Operator_Assignment.Models.View
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization

@model ContractView

@inject IStringLocalizer<ContractView> Localizer

<h1>@ViewData["Title"]</h1>
@{
    ViewData["Title"] = Localizer["ContractRoadUser"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["Contract Road User"]</h1>

<div class="container">
    <table class="table table-hover table-bordered mt-5 table-sm">
        <thead>
            <tr>
                <th scope="col">@Localizer["Id"]</th>
                <th scope="col">@Localizer["Company"]</th>
                <th scope="col">@Localizer["Fee"]</th>
                <th scope="col">@Localizer["Type"]</th>
                <th scope="col">@Localizer["Expiry Date"]</th>
                <th scope="col">@Localizer["User Id"]</th>
                <th scope="col">@Localizer["Details"]</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var cont in Model.contracts)
                {
                    <tr>
                        <td>@cont.Id</td>
                        <td>@Localizer[cont.Company]</td>
                        <td>@cont.Fee</td>
                        <td>@Localizer[cont.Type]</td>
                        <td>@cont.ExpiryDate</td>
                        <td>@cont.UserId</td>
                        <td><a href="/Toll/ContractDetails?contractId=@cont.Id" class="btn btn-sm btn-primary ml-5">@Localizer["View Details"]</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
    @if (User.IsInRole("road-user"))
    {
        <button id="newContract" class="btn btn-success">@Localizer["Request New Contract"]</button>
        <p id="newTxt" class="hidden">@Localizer["Your request has been sent. One of our team will get back to you shortly."]</p>
    }
</div>