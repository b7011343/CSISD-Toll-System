@using CSISD_Toll_Operator_Assignment.Models
@model IEnumerable<PaymentViewModel>
@{
    ViewData["Title"] = "Pay Invoice";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
            @foreach (var item in Model)
            {
                <p>@item.invoice.Id</p>
                <p>@item.invoice.Fee</p>
                <p>@item.invoice.UserId</p>
                <p>@item.invoice.EntryTimestamp</p>
                <p>@item.invoice.ExitTimestamp</p>
                <p>@item.invoice.VehicleId</p>
                <p>@item.invoice.Paid</p>
            }
    <form asp-controller="Toll" asp-action="Pay" method="post">
        <p>Total: </p>
        <label for="cards">Select card</label>
        <select name="cards" id="cards">
            @foreach (var item in Model)
            {
                foreach (var card in item.cards)
                {
                    <option value="@Html.DisplayFor(modelItem => card.CardNumber)">@Html.DisplayFor(modelItem => card.CardNumber)</option>
                }
            }
        </select>
        <label for="cvv">CVV:</label>
        <input id="cvv" name="cvv" type="text" placeholder="Enter your cvv" />
    </form>
</div>
