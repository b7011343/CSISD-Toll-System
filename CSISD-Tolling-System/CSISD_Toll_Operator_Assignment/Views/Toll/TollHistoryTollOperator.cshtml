@using CSISD_Toll_Operator_Assignment.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model TollHistoryViewModel
@{
    ViewData["Title"] = Localizer["Toll History"];
}
<div class="container">
    <table id="data-table" class="table table-hover table-bordered mt-2 table-sm">
        <thead>
            <tr>
                <th class="text-center" colspan="6">@Localizer["Toll History"]</th>
            </tr>
            <tr>
                <th scope="col">@Localizer["User ID"]</th>
                <th scope="col">@Localizer["Entry"]</th>
                <th scope="col">@Localizer["Exit"]</th>
                <th scope="col">@Localizer["Charge"]</th>
                <th scope="col">@Localizer["Paid"]</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var invoice in Model.Invoices)
                {
                    <tr>
                        <td>@invoice.UserId</td>
                        <td>@invoice.EntryTimestamp</td>
                        <td>@invoice.ExitTimestamp</td>
                        <td>£@invoice.Fee</td>
                        <td>@(invoice.Paid ? "✔" : "❌")</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
